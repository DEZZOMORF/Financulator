<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coin_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@+id/symbol"
            android:layout_toLeftOf="@+id/symbol"
            android:layout_toEndOf="@+id/logo1"
            android:layout_toRightOf="@+id/logo1"
            android:text="Name"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintEnd_toStartOf="@+id/symbol"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/logo1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/logo2"
            android:layout_toLeftOf="@+id/logo2"
            android:layout_marginHorizontal="10dp"
            android:gravity="right"
            android:text="Symbol"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintEnd_toStartOf="@+id/logo2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/logo2"
            android:layout_toLeftOf="@+id/logo2"
            android:layout_toEndOf="@+id/logo1"
            android:layout_toRightOf="@+id/logo1"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/logo2"
            app:layout_constraintStart_toEndOf="@+id/logo1" />

</androidx.constraintlayout.widget.ConstraintLayout>